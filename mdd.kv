<MyLayout>:
    id: layout
    MDCard:
        pos_hint: {'center_x': .5, 'center_y': .92}
        line_color: 'gray'
        size_hint: .8, .1
        MDLabel:
            text: 'Select payment'
            halign: 'center'

    MyToggle:
        text: '1 month'
        group: 'x'
        pos_hint: {'center_x': .3, 'center_y': .81}
        size_hint: .4, .1
        on_release: self.set_payment(1)
    MyToggle:
        text: '6 month'
        group: 'x'
        pos_hint: {'center_x': .7, 'center_y': .81}
        size_hint: .4, .1
        on_release: self.set_payment(6)

    MDCard:
        pos_hint: {'center_x': .5, 'center_y': .7}
        size_hint: .8, .1
        line_color: 'gray'
        MDLabel:
            text: 'Enter unit size'
            halign: 'center'
    MyTextField:
        id: unit_input
        mode: 'rectangle'
        hint_text: 'Enter unit size:'
        pos_hint: {'center_x': .5, 'center_y': .55}
        size_hint: .8, .15
        on_text_validate:
            self.set_unit_size()


    CalcButton:
        id: calc_button
        text: 'Calculate'
        pos_hint: {'center_x': .5, 'center_y': .38}
        size_hint: .8, .15
        on_release:
            self.handle_button()


    MDCard:
        md_bg_color: 'gray'
        style: 'outlined'
        line_color: 'purple'
        pos_hint: {'center_x': .5, 'center_y': .15}
        size_hint: .8, .28
        MDRelativeLayout:
            AltLabel:
                id: prorate_lbl
                pos_hint: {'center_y': .9}
            AltLabel:
                id: base_price_lbl
                pos_hint: {'center_y': .75}
            AltLabel:
                id: sub_total_lbl
                pos_hint: {'center_y': .6}
            AltLabel:
                id: tax_lbl
                pos_hint: {'center_y': .45}
            AltLabel:
                id: grand_total_lbl
                pos_hint: {'center_y': .3}
            AltLabel:
                id: next_payment_lbl
                pos_hint: {'center_y': .15}



